<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"

    android:layout_margin="8dp"

    android:background="@drawable/card_view_shape"

    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationNameLabel"

        android:text="@string/locationNameLabel"
        android:textColor="@color/black"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationName"

        android:text="برج میلاد"

        android:layout_marginHorizontal="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/locationNameLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationAddressLabel"

        android:text="@string/locationAddressLabel"
        android:textColor="@color/black"
        android:textStyle="bold"

        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/locationNameLabel"
        app:layout_constraintEnd_toEndOf="@id/locationNameLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationAddress"

        android:text="تهران خیابان جام جم اون وسطش"

        android:layout_marginHorizontal="10dp"

        app:layout_constraintTop_toTopOf="@id/locationAddressLabel"
        app:layout_constraintBottom_toBottomOf="@id/locationAddressLabel"
        app:layout_constraintEnd_toStartOf="@id/locationAddressLabel" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/showLocationOnMapBtn"

        android:text="@string/showLocationOnMapBtn"
        android:background="@drawable/btn_background"
        android:textStyle="bold"

        android:layout_marginTop="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locationAddressLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>