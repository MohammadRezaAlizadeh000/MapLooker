<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"/>
            <solid android:color="@color/completeAlphaGray"/>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"/>
            <solid android:color="@color/oneTenthAlphaGray"/>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"/>
            <solid android:color="@color/oneFifthAlphaGray"/>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"/>
            <solid android:color="@color/thirdAlphaGray"/>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"/>
            <solid android:color="@color/halfAlphaGray"/>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/gray"
                android:width="1dp"/>
            <solid android:color="@color/white" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />

        </shape>

    </item>
</layer-list>